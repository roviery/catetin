<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="60dp">

    <TextView
        android:id="@+id/dialog_tv_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/insert_to_do"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/todo_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/delete_todo"
        android:src="@drawable/ic_delete"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/dialog_tv_insert"
        app:layout_constraintEnd_toEndOf="@id/dialog_tv_insert"
        app:layout_constraintTop_toTopOf="@id/dialog_tv_insert" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_ti_todo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:hint="@string/todo"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:layout_constraintEnd_toEndOf="@id/dialog_tv_insert"
        app:layout_constraintStart_toStartOf="@id/dialog_tv_insert"
        app:layout_constraintTop_toBottomOf="@id/dialog_tv_insert">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_et_todo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:inputType="text"
            android:lines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/dialog_btn_save"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/save"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/dialog_ti_todo"
        app:layout_constraintTop_toBottomOf="@id/dialog_ti_todo" />

</androidx.constraintlayout.widget.ConstraintLayout>